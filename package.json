{
  "name": "theseus-cwl",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean": "turbo clean && rm -rf node_modules",
    "version-packages": "changeset version",
    "publish-packages": "turbo run build --filter=@theseus-cwl/configurations --filter=@theseus-cwl/eslint-config lint && changeset version && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "prettier": "^3.5.3",
    "turbo": "^2.4.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.5.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}