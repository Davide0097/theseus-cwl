{
  "name": "@theseus-cwl/ui",
  "description": "A UI component library for rendering and editing Common Workflow Language (CWL) workflows through a visual interface.",
  "version": "1.0.20",
  "author": "davide giorgiutti",
  "license": "ISC",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "style": "./dist/style.css"
    }
  },
  "dependencies": {
    "@xyflow/react": "^12.8.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@theseus-cwl/configurations": "^1.0.3",
    "@theseus-cwl/eslint-config": "*",
    "@theseus-cwl/types": "*",
    "@theseus-cwl/typescript-config": "*",
    "@types/node": "^22.13.10",
    "@types/react": "19.0.12",
    "@types/react-dom": "19.0.4",
    "eslint": "^9.23.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsup": "^8.5.0",
    "typescript": "5.8.2"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  }
}